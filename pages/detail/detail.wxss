/* pages/detail.wxss */
.main_container {
    display: flex;
    flex-direction: column;
    margin: 40rpx
}

.divider {
    width: 100%;
    height: 1px;
    background-color: #87CEEB
}

.detail_title {
    font-size: 40rpx;
    line-height: 56rpx
}

.detail_sub_title {
    display: flex;
    font-size: 25rpx;
    line-height: 35rpx;
    opacity: 0.5;
    margin: 10rpx 0rpx 40rpx;
}

.detail_sub_source {
    margin: 10rpx 10rpx 10rpx 0
}

.detail_sub_date {
    flex: 1;
    margin: 10rpx 10rpx 10rpx 0
}

.detail_sub_read_count {
    margin: 10rpx 10rpx 10rpx 0
}

.detail_container {
    font-size: 25rpx;
    line-height: 35rpx;
}

.detail_p {
    margin: 10rpx 0;
    opacity: 0.9;
}

.detail_strong {
    margin: 10rpx 0;
    font-weight: bold
}

.detail_image {
    flex: 1;
    width: 100%;
    margin: 10rpx 0;
}